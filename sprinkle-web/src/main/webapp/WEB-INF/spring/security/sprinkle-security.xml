<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <beans:import resource="sprinkle-security-beans.xml"/>

    <http entry-point-ref="authenticationEntryPoint">

        <!-- ANONYMOUS -->
        <intercept-url pattern="/j_spring_security_check" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/authentication/signup" access="IS_AUTHENTICATED_ANONYMOUSLY"/>

        <!-- USER -->
        <intercept-url pattern="/authentication/profilestatus.json" access="ROLE_USER"/>
        <intercept-url pattern="/map/setevent" access="ROLE_USER"/> <!-- requires-channel="https" -->
        <intercept-url pattern="/profile/**" access="ROLE_USER"/>
        <intercept-url pattern="/new_event" access="ROLE_USER"/>

        <form-login authentication-success-handler-ref="successHandler"
                    authentication-failure-handler-ref="failureHandler"/>

        <logout logout-url="/logout"
                invalidate-session="true"
                delete-cookies="true"
                success-handler-ref="logoutSuccessHandler"/>

         <!--Can add timeouts-->
        <remember-me services-ref="rememberMeServices"/>

        <session-management>
             <!--Limit the number of sessions-->
            <concurrency-control max-sessions="5"
                                 error-if-maximum-exceeded="true"/>
        </session-management>

    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="sprinkleUserDetailsService">
            <password-encoder ref = "passwordEncoder"/>
        </authentication-provider>
    </authentication-manager>

</beans:beans> 