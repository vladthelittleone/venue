<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />

	<!-- Load in application properties reference -->
	<bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="file:${accountConfig}/application.properties" />
	</bean>

	<import resource="databaseContext.xml"/>
	<!-- <import resource="jmxContext.xml"/> -->
	
	<!-- REMOTING -->
	<bean id="accountServiceImpl" class="com.sprinkle.service.account.AccountServiceAPIImpl">
		<constructor-arg ref="AccountAO"/>
	</bean>
	
	<!-- CACHE -->
	<bean id="AccountAO" class="com.sprinkle.service.account.ao.AccountFacadeImpl">
		<constructor-arg ref="AccountDAO"/>
	</bean>
	
	<bean class="net.sf.ehcache.Ehcache" factory-bean="cacheManager" factory-method="getEhcache">
    	<constructor-arg value="sprinkleCache" />
	</bean>
	
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    	<property name="configLocation" value="file:${accountConfig}/ehcache.xml" />
	</bean>

</beans>