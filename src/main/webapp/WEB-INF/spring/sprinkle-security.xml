<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http entry-point-ref="authenticationEntryPoint">
        <intercept-url pattern="/sprinkle/**" access="ROLE_ANONYMOUS, ROLE_USER" />

        <!-- successHandler returns code 200 after successful authentication
        failureHandler returns code 401 after failed authentication
        logoutSuccessHandler return code 200 after successful logout-->
        <form-login authentication-success-handler-ref="successHandler"
                    authentication-failure-handler-ref="failureHandler"/>
        <logout logout-url="/logout" success-handler-ref="logoutSuccessHandler"/>
    </http>

    <beans:bean id="authenticationEntryPoint" class="com.sprinkle.web.security.service.handler.CustomAuthenticationEntryPoint" />

    <beans:bean id="successHandler" class="com.sprinkle.web.security.service.handler.CustomAuthenticationSuccessHandler"/>
    <beans:bean id="failureHandler" class="org.springframework.security.web.authentication.SimpleUrlAuthenticationFailureHandler"/>
    <beans:bean id="logoutSuccessHandler" class="com.sprinkle.web.security.service.handler.CustomLogoutSuccessHandler" />
    <authentication-manager>
        <authentication-provider user-service-ref="customAccountDetailsService"/>
    </authentication-manager>

    <beans:bean id="customAccountDetailsService" class="com.sprinkle.web.security.service.CustomUserDetailsService"/>

</beans:beans> 